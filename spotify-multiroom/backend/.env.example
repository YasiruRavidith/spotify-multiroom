# Spotify App Credentials (from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here

# Get this by visiting /auth/url after first setup
SPOTIFY_REFRESH_TOKEN=

# Callback URL - must match exactly in Spotify Dashboard
REDIRECT_URI=http://localhost:3001/callback

# Optional password protection
SITE_PASSWORD=

# Server port
PORT=3001

# Device name that appears in Spotify
DEVICE_NAME=Spotify Multi-Room
